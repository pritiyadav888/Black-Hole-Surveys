<%- include ../partials/header.ejs %>

      <%- include ../partials/main_nav.ejs %>

      <div id="register">
    <div class="bg-light" id="register">
      <div class="container py-5">
      <div class="row h-100  py-5">
      <div class="col-lg-6">
       
       <!-- message area  -->
       <% if(messages.length > 0) {%>
        <div class="alert alert-danger">
           <%= messages %>
        </div>
       <% } %>
       
        
        <div class="row">
          <div class="offset-md-0 col-lg-5">
            <h3>Please Register</h3><br>
             <form  method="POST" autocomplete="off">
                <fieldset class="form-group">
                  <label for="username"><strong>Username: </strong> </label>
                  <input type="text" class="form-contrl"
                  name = 'username' placeholder="Enter username"
                  id="username" required autofocus >
                </fieldset>
        
                <fieldset class="form-group">
                  <label for="password"><strong>Password:  </strong></label>
                  <input type="password" class="form-contrl"
                  name = 'password' placeholder="Enter password"
                  id="password" required>
                </fieldset>

                <fieldset class="form-group">
                  <label for="email"><strong>Email Address:  </strong> </label>
                  <input type="email" class="form-contrl"
                  name = 'email' placeholder="Enter Email Address"
                  id="email" required>
                </fieldset>

                <fieldset class="form-group">
                  <label for="displayName"><strong>Display Name: </strong></label>
                  <input type="text" class="form-contrl"
                  name = 'displayName' placeholder="Display Name"
                  id="displayName" required>
                </fieldset>
        
                <fieldset class="form-group text-right">
                  <input type="submit" class="btn btn-success" value="Register">
                  <a href="/">
                    <input type="button" class="btn btn-warning" value="Cancel">
                  </a>
                </fieldset>
            </form>
          </div>
        </div>
        
        </div> 
        </div> 
       </div>
      </div>
      <%- include ../partials/bottom_nav.ejs %>

      <%- include ../partials/footer.ejs %>
        